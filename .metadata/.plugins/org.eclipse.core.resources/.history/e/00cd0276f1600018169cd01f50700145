package com.robin;

import java.io.IOException;
import java.net.SocketException;
import org.apache.commons.net.ftp.FTPClient;

class FtpLogin {
	int port;
	String host;
	String password;
	String user;

	public FtpLogin(int _port, String _host, String _password, String _user) {
		this.port = _port;
		this.host = _host;
		this.password = _password;
		this.user = _user;

	}

	public void connect() {
		FTPClient ftp = new FTPClient();

		try {
			ftp.connect(this.host, this.port);
			if(ftp.login(this.user, this.password)==true){
				System.out.println("登录成功!");
			}else{
				System.out.println("登录失败");
			}
		} catch (SocketException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		}

	}
}

public class FtpLoginEnumeration {
	/*
	 * host:119.28.50.82 port:21 password:12345678x user:1032740078_2
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		FtpLogin user1 = new FtpLogin(21, "119.28.50.82", "12345678x", "1032740078_2");
		user1.connect();

	}

}
